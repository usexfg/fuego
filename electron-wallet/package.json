{
  "name": "fuego-wallet",
  "productName": "Fuego Wallet",
  "version": "1.0.0",
  "description": "Desktop wallet and node for Fuego (XFG) cryptocurrency",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder --mac --win --linux",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "org.usexfg.wallet",
    "productName": "Fuego Wallet",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer.html",
      "assets/**/*"
    ],
    "extraResources": [
      {
        "from": "binaries/",
        "to": "binaries",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "category": "public.app-category.finance",
      "icon": "assets/icon.icns",
      "target": ["dmg", "zip"]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": ["nsis", "portable"]
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": ["AppImage", "deb"],
      "category": "Finance"
    }
  },
  "keywords": [
    "fuego",
    "xfg",
    "cryptocurrency",
    "wallet",
    "privacy",
    "cryptonote"
  ],
  "author": "Fuego Community",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "node-fetch": "^2.7.0"
  }
}

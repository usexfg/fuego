{
  "name": "fuego-electron-wallet",
  "version": "1.0.0",
  "description": "Fuego Electron Wallet",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "start:dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "npm run build"
  },
  "keywords": [
    "fuego",
    "cryptocurrency",
    "wallet",
    "electron"
  ],
  "author": "Fuego Developers",
  "license": "GPL-3.0",
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "node-fetch": "^3.3.0"
  },
  "build": {
    "appId": "org.fuego.wallet",
    "productName": "Fuego Wallet",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "renderer.html",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.finance"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
